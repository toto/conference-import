{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "strictNullChecks": true,
    "incremental": true,
    "noEmitOnError": true,
    "lib": [
      "es2016"
    ]
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
